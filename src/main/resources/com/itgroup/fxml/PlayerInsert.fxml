<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.collections.*?>
<?import javafx.scene.layout.*?>


<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="540.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.itgroup.controller.PlayerInsertController">
    <children>
        <!-- 변수 정의 -->
        <fx:define>
            <Double fx:id="xLabelPosition" fx:value="56.0"/><!-- 라벨의 x 좌표 위치 -->
            <Double fx:id="xTextFieldPosition" fx:value="135.0"/><!-- 입력 상자의 x 좌표 위치 -->
            <Double fx:id="textFiedWidth" fx:value="200.0"/><!-- 입력 상자의 너비 -->
        </fx:define>
        <Label layoutX="$xLabelPosition" layoutY="17.0" text="선수 등록 화면">
            <font>
                <Font size="25.0"/>
            </font>
        </Label>

        <!-- Product 클래스를 토대로 fxml 파일 내에서 다음과 같이 camel case 표기법으로 작성합니다. -->
        <Label layoutX="$xLabelPosition" layoutY="60.0" text="이름">
            <font>
                <Font size="15.0" fx:id="myFont01"/>
            </font>
        </Label>
        <TextField fx:id="fxmlName" layoutX="$xTextFieldPosition" layoutY="60.0" prefWidth="$textFiedWidth" text=""/>

        <Label font="$myFont01" layoutX="$xLabelPosition" layoutY="100.0" text="체급"/>
        <ComboBox fx:id="fxmlWeight" layoutX="$xTextFieldPosition" layoutY="100.0" prefWidth="$textFiedWidth">
            <items>
                <!-- factory 속성은 자바의 static 메소드를 객체를 생성하고자 할때 사용합니다. -->
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="--체급 선택--" />
                    <String fx:value="플라이급" />
                    <String fx:value="밴텀급" />
                    <String fx:value="페더급" />
                    <String fx:value="라이트급" />
                    <String fx:value="웰터급" />
                    <String fx:value="미들급" />
                    <String fx:value="라이트 헤비급" />
                    <String fx:value="헤비급" />
                </FXCollections>
            </items>
        </ComboBox>

        <Label font="$myFont01" layoutX="$xLabelPosition" layoutY="140.0" text="랭킹"/>
        <TextField fx:id="fxmlRank" layoutX="$xTextFieldPosition" layoutY="140.0" prefWidth="$textFiedWidth" text=""/>

        <Label font="$myFont01" layoutX="$xLabelPosition" layoutY="180.0" text="전적"/>
        <TextField fx:id="fxmlRecord" layoutX="$xTextFieldPosition" layoutY="180.0" prefWidth="$textFiedWidth" text=""/>

        <Label font="$myFont01" layoutX="$xLabelPosition" layoutY="220.0" text="이미지"/>
        <TextField fx:id="fxmlImage" layoutX="$xTextFieldPosition" layoutY="220.0" prefWidth="$textFiedWidth" text=""/>

        <Label font="$myFont01" layoutX="$xLabelPosition" layoutY="260.0" text="국적"/>
        <TextField fx:id="fxmlNationality" layoutX="$xTextFieldPosition" layoutY="260.0" prefWidth="$textFiedWidth" text=""/>

        <Label font="$myFont01" layoutX="$xLabelPosition" layoutY="300.0" text="스타일"/>
        <TextField fx:id="fxmlStyle" layoutX="$xTextFieldPosition" layoutY="300.0" prefWidth="$textFiedWidth" text=""/>

        <Label font="$myFont01" layoutX="$xLabelPosition" layoutY="340.0" text="나이"/>
        <TextField fx:id="fxmlAge" layoutX="$xTextFieldPosition" layoutY="340.0" prefWidth="$textFiedWidth" text=""/>

        <Label font="$myFont01" layoutX="$xLabelPosition" layoutY="380.0" text="데뷔"/>
        <DatePicker fx:id="fxmlDebut" layoutX="$xTextFieldPosition" layoutY="380.0" prefWidth="$textFiedWidth" promptText="날짜를 선택해 주세요." />

    </children>

    <Button layoutX="$xLabelPosition" prefWidth="285" layoutY="418.0" mnemonicParsing="false" text="등록하기" onAction="#onPlayerInsert">
        <font>
            <Font name="System Bold" size="20.0"/>
        </font>
    </Button>

</AnchorPane>
